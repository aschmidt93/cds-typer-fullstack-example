{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "baseUrl": "./",
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": ["gen", "node_modules"],
  "include": ["src/**/*"]
}
